{
  "name": "api-node",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "tsx server.ts",
    "dev": "powershell \"taskkill /F /IM node.exe 2>$null; Start-Sleep 1; tsx --watch server.ts\"",
    "dev:clean": "powershell \"taskkill /F /IM node.exe 2>$null; Start-Sleep 2; tsx --watch server.ts\"",
    "build": "tsc",
    "start:prod": "node dist/server.js",
    "migrate": "node src/scripts/database/apply-migration.js",
    "migrate:generate": "npx drizzle-kit generate",
    "db:setup": "npm run migrate:generate && npm run migrate",
    "db:reset": "powershell \"Remove-Item -Force src/database/dev.db -ErrorAction SilentlyContinue\" && npm run migrate",
    "db:check": "node src/scripts/database/check-db.js",
    "db:migrate": "node src/scripts/database/index.js migrate",
    "db:seed": "tsx src/database/seeds/index.ts",
    "db:seed-users": "tsx src/database/seeds/seed-users.ts",
    "db:seed-courses": "tsx src/database/seeds/seed-courses.ts",
    "db:reset-table": "node src/scripts/database/reset-table.js",
    "db:reset-users": "node src/scripts/database/reset-table.js users",
    "db:reset-courses": "node src/scripts/database/reset-table.js courses",
    "db:reset-enrollments": "node src/scripts/database/reset-table.js enrollments",
    "db:reset-all-tables": "node src/scripts/database/reset-table.js all",
    "db:help": "node src/scripts/database/index.js help",
    "drizzle:studio": "npx drizzle-kit studio",
    "git:deploy": "node src/scripts/git/deploy.js",
    "git:push-dev": "node src/scripts/git/push-dev.js",
    "git:status": "node src/scripts/git/status.js",
    "git:cleanup": "node src/scripts/git/cleanup.js",
    "git:help": "node src/scripts/git/index.js help",
    "deploy": "npm run git:deploy",
    "push-dev": "npm run git:push-dev",
    "status": "npm run git:status",
    "cleanup": "npm run git:cleanup"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@scalar/fastify-api-reference": "^1.37.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.1",
    "fastify-type-provider-zod": "^6.0.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
